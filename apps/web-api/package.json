{
  "name": "@edu-platform/core-api",
  "version": "1.0.0",
  "description": "Core domain API",
  "scripts": {
    "gen-env": "gen-env-types .env -o src/env.d.ts -e .",
    "build:ci": "rm -rf build && node ./build.mjs",
    "build:windows": "tsc -p tsconfig.json && tsc-alias",
    "debug:sqs": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn  --exit-child --ignore-watch node_modules src/core/main/sqs.debug.ts",
    "start": "node ./build/index.api/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn  --exit-child --ignore-watch node_modules src/index.api.ts",
    "test": "cross-env NODE_ENV=test jest --watchAll",
    "test2:ci": "cross-env NODE_ENV=test jest --no-cache --runInBand",
    "test:ci": "cross-env NODE_ENV=test echo \"Testing\"",
    "install:ci": "cross-env NODE_ENV=test npm i",
    "format": "npx prettier --write .",
    "format:ci": "npx prettier --config ../eslint-config/.prettierrc.json --ignore-path ../eslint-config/.prettierignore --check .",
    "db:gen:migration": "npm drizzle-kit generate:mysql --schema=./src/schema.ts",
    "db:push:core": "drizzle-kit push:pg --config core.drizzle.config.ts",
    "db:push:iam": "drizzle-kit push:pg --config iam.drizzle.config.ts",
    "db:studio": "npx drizzle-kit studio",
    "docker:build": "docker build -t language-app/web-api -f ./Dockerfile ../..",
    "docker:exec": "docker exec -ti language-app-web-api /bin/bash"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@edu-platform/common": "workspace:*",
    "awilix": "^7.0.3",
    "dotenv": "^16.0.1",
    "drizzle-orm": "^0.30.1",
    "email-validator": "^2.0.4",
    "google-auth-library": "^9.1.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@dotenv-run/esbuild": "^1.3.5",
    "@faker-js/faker": "^8.0.2",
    "@stylistic/eslint-plugin-js": "^2.6.1",
    "@stylistic/eslint-plugin-ts": "^2.6.1",
    "@types/aws-lambda": "^8.10.137",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/function-bind": "^1.1.6",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^17.0.45",
    "@types/nodemailer": "^6.4.11",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^9.0.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.14",
    "gen-env-types": "^1.0.5",
    "lint-staged": "15.2.7",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^5.3.3"
  },
   "packageManager": "pnpm@9.12.0"
}
