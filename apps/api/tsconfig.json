{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    // "moduleResolution": "node",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src/",
    "outDir": "./build/",
    "jsx": "react",
    "sourceMap": true,
    "paths": {
      "@use-cases": ["./application/use-cases/index.ts"],
      "@domain": ["./application/domain/index.ts"],
      "@infrastructure": ["./infrastructure/index.ts"],
      "@interfaces": ["./interfaces/index.ts"],
      "@test": ["./test/index.ts"],
      "@controllers": ["./controllers/index.ts"],
      "@main": ["./main/index.ts"]
    }
  },
  "exclude": ["src/**/*.spec.ts", "src/**/test"],
  "include": [
    "src/**/*.ts",
    "node_modules/**/*.d.ts",
    "src/infrastructure/services/aws-s3.js",
    "src/infrastructure/services/aws-s3.js"
  ]
  // "include": ["./src/**/*.tsx", "./src/**/*.ts", "../common/src/", "../../application/src/interfaces/services.ts", "../../application/src/infrastructure/services/aws-s3.ts"]
}
