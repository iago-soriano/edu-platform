{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src/",
    "outDir": "./build/",
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@use-cases": ["./application/use-cases/index.ts"],
      "@use-case-middlewares": ["./application/use-case-middlewares/index.ts"],
      "@dto-mappers": ["./application/dto-mappers/index.ts"],
      "@domain": ["./application/domain/index.ts"],
      "@infrastructure": ["./infrastructure/index.ts"],
      "@interfaces": ["./interfaces/index.ts"],
      "@test": ["./test/index.ts"],
      "@controllers": ["./controllers/index.ts"],
      "@main": ["./main/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "node_modules/**/*.d.ts"],
  "exclude": ["src/test/**/*.ts", "**/*.spec.ts"]
}
