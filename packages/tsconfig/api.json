{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node.js API",
    // "extends": "./base.json",
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "allowJs": true,
      "strict": false,
      "incremental": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src/",
      "outDir": "./build/",
      "jsx": "react",
      "sourceMap": true,
      "paths": {
        "@prisma-client": ["../generated/client"],
        "@use-cases": ["./application/use-cases/index.ts"],
        "@infrastructure": ["./infrastructure/index.ts"],
        "@interfaces": ["./interfaces/index.ts"],
        "@domain": ["./application/domain/index.ts"],
        "@test": ["./test/index.ts"],
        "@controllers": ["./controllers/index.ts"],
        "@main": ["./main/index.ts"],
        "@common/errors": ["../../common/errors/index.ts"],
        "@common/test": ["../../common/test/index.ts"],
        "@common/domain": ["../../common/domain/index.ts"],
        "@common/interfaces": ["../../common/interfaces/index.ts"],
        "@api/client": ["../../api/src/client/index.ts"],
        "@/*": ["*"]
      }
    }
    // "exclude": ["src/presentation/app", "src/**/*.spec.ts", "src/**/test"],
    // "include": ["src/**/*.ts", "node_modules/**/*.d.ts"]
  }
  