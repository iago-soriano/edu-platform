{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
  "compilerOptions": {
    "target": "esnext",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": "./src/",
    "paths": {
      // "@utils": ["utils/index.ts"],
      "@components": [
        "components/index.ts"
      ],
      // "@locale": ["locale/index.ts"],
      "@contexts": [
        "contexts/index.ts"
      ],
      "@styles": [
        "styles/index.ts"
      ],
      "@infrastructure": [
        "infrastructure/index.ts"
      ],
      // "@model": ["model/index.ts"],
      // "@atomic/atoms": ["atomic/atoms/index.ts"],
      // "@atomic/molecules": ["atomic/molecules/index.ts"],
      // "@atomic/organisms": ["atomic/organisms/index.ts"],
      // "@atomic": ["atomic/index.ts"],
      "@modules/*": [
        "modules/*/index.tsx"
      ],
      // "@common/interfaces": ["../../common/interfaces/index.ts"],
      "@api/client": ["../../api/src/client/index.ts"],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true
  }
//   "include": [
//     "next-env.d.ts",
//     "**/*.ts",
//     "**/*.tsx",
//     // "../../api/src/client/index.ts",
//     // "../../common/interfaces/index.ts"
//   ],
//   "exclude": [
//     "node_modules"
//   ]
}
